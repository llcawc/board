extends ../layouts/default.pug

block variables
  - var title = 'Error 404'
  - var pageHeader = 'Error 404'

block styles
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css")

block main
  main(class="container mx-auto flex justify-center items-center")
    section(class="mb-20 sm:w-80")
      div(class="flex gap-2 text-white")
        h1(class="mb-0 animated fadeIn") <i class="bi bi-bell"></i>
        div.info
          h1(class="mb-0 animated fadeIn") Error 404!
          p(class="mb-4 animated fadeIn") Document not found.
          a(class="inline-block px-4 py-2 border rounded-md border-red-600 hover:text-white hover:bg-red-600 hover:no-underline hover:duration-250 active:translate-y-0.5 animated fadeIn slow delay-1s", href="/")
            span.font-normal HOME
