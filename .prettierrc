{
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "printWidth": 120,
  "overrides": [
    {
      "files": ["./**/*.{ts,js,jsx,mjs,cjs}"],
      "options": {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "plugins": ["prettier-plugin-embed", "prettier-plugin-organize-imports"]
      }
    },
    {
      "files": ["./**/*.css"],
      "options": {
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    },
    {
      "files": ["tsconfig.json"],
      "options": {
        "parser": "jsonc"
      }
    }
  ]
}
